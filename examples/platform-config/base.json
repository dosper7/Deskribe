{
  "organization": "acme",
  "defaults": {
    "runtime": "kubernetes",
    "region": "westeurope",
    "replicas": 2,
    "cpu": "250m",
    "memory": "512Mi",
    "namespacePattern": "{app}-{env}",
    "pulumiProjectDir": "examples/weather-api/infra"
  },
  "backends": {
    "postgres": "pulumi",
    "redis": "pulumi",
    "kafka.messaging": "pulumi"
  },
  "policies": {
    "allowedRegions": ["westeurope", "northeurope", "eastus2"],
    "enforceTLS": true
  }
}
