{
  "name": "weather-api",
  "resources": [
    { "type": "postgres", "size": "s", "version": "16" }
  ],
  "services": [
    {
      "name": "api",
      "env": {
        "ConnectionStrings__WeatherDb": "@resource(postgres).connectionString"
      },
      "overrides": {
        "prod": { "replicas": 2, "cpu": "500m", "memory": "512Mi" }
      }
    }
  ]
}
