{
  "name": "weather-api",
  "resources": [
    { "type": "postgres", "size": "s", "version": "16" }
  ],
  "services": [
    {
      "name": "api",
      "env": {
        "ConnectionStrings__WeatherDb": "@resource(postgres).connectionString"
      },
      "overrides": {
        "local": { "replicas": 1, "cpu": "250m", "memory": "256Mi" },
        "prod-eu": { "replicas": 3, "cpu": "500m", "memory": "1Gi" }
      }
    }
  ]
}
